{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ECV analyzer",
  "version": "1.0.0",
  "identifier": "com.ecvanalyzer.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "ECV analyzer - Edit & Export",
        "width": 1400,
        "height": 900,
        "minWidth": 1200,
        "minHeight": 700,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "../backend/*.py": "./",
      "../backend/requirements.txt": "./",
      "../backend/python-embed": "./"
    },
    "macOS": {
      "minimumSystemVersion": "10.13"
    },
    "windows": {
      "webviewInstallMode": {
        "type": "embedBootstrapper"
      },
      "allowDowngrades": true,
      "wix": {
        "language": ["en-US"]
      },
      "nsis": {
        "displayLanguageSelector": false
      }
    }
  },
  "plugins": {
    "fs": {
      "scope": ["$APPDATA/**", "$RESOURCE/**", "$HOME/**", "**"]
    },
    "dialog": {
      "all": true
    },
    "shell": {
      "sidecar": true,
      "scope": [
        {
          "name": "backend",
          "sidecar": true,
          "args": true
        }
      ]
    },
    "http": {
      "scope": ["http://localhost:8000/**", "https://api.anthropic.com/**"]
    }
  }
}
